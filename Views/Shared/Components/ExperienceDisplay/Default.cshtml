@model List<Experience>


@if (Model.Any())
{
    @*<form asp-controller="Home" asp-action="UpdateExperiences" method="post">*@
    <form id="editExpFrom" asp-action="UpdateExperiences" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="EditSuccess" data-ajax-failure="EditFailure"> @*data-ajax-update="#exp-grp-container" < this works like $load but i get validation warnings *@
        <div asp-validation-summary="All" class="text-danger"></div>

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="m-3 bg-info">

                <input asp-for="@Model[i].Id" hidden type="text" />

                <input asp-for="@Model[i].Title" type="text" value="@Model[i].Title" />
                <input asp-for="@Model[i].MarkForDeletion" />
                <br />

                @for (int j = 0; j < Model[i].ExperiencePoints.Count; j++)
                {
                    <input asp-for="@Model[i].ExperiencePoints[j].Title" type="text" value="@Model[i].ExperiencePoints[j].Title" />
                    <input asp-for="@Model[i].ExperiencePoints[j].MarkForDeletion" />

                    <br />

                    @for (int k = 0; k < Model[i].ExperiencePoints[j].Descriptions.Count; k++)
                    {
                        <input asp-for="@Model[i].ExperiencePoints[j].Descriptions[k].Discription" type="text" value="@Model[i].ExperiencePoints[j].Descriptions[k].Discription" />
                        <input asp-for="@Model[i].ExperiencePoints[j].Descriptions[k].MarkForDeletion" />

                        <br />
                    }

                }
            </div>
        }

        <button type="submit"> submit</button>

    </form>

}
else
{
    <div>
        <h1 class="text-danger">User mismatch Or you don't have any experience, need to differentiate the 2 cases (line 4 default ExpDisplay VC)</h1>
    </div>
}

