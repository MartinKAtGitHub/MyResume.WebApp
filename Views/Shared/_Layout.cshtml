<!DOCTYPE html>

@inject SignInManager<ApplicationUser> signInManager;

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="~/images/Favicon.png">

    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/Jquery/jquery.js"></script>
        <script src="~/lib/jquery-bar-rating/jquery.barrating.min.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                crossorigin="anonymous"></script>

        <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

 
        <link href="~/lib/jquery-bar-rating/themes/bars-square.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet"
              href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
              crossorigin="anonymous"
              asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              asp-suppress-fallback-integrity="true">
        @*in case the CDN fails (twitter server got nuked) we need to fall back on the server version or the site is not gonna work cuz no bootstrap styling*@

        <script src="https://code.jquery.com/jquery-3.4.1.min.js"
                integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
                crossorigin="anonymous">

        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"
                integrity="sha256-sPB0F50YUDK0otDnsfNHawYmA5M0pjjUf4TvRJkGFrI="
                crossorigin="anonymous">

        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"
                integrity="sha256-9GycpJnliUjJDVDqP0UEu/bsm9U+3dnQUH8+3W10vkY="
                crossorigin="anonymous">

        </script>

        <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/lib/jquery-bar-rating/jquery.barrating.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
                integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
                crossorigin="anonymous">

        </script>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
                integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
                crossorigin="anonymous">

        </script>


        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

      
        <link href="~/lib/jquery-bar-rating/themes/bars-square.css" rel="stylesheet" />
    </environment>

    <link href="~/css/site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>

    @*<div class="container-fluid">*@

        <nav class="navbar navbar-expand flex-column flex-sm-row navbar-dark justify-content-center active">

            <a asp-controller="home" asp-action="index" class="navbar-brand mr-0 mr-md-2 ">
                <img src="~/images/Favicon.png" class="d-inline-block align-top" alt="Site Logo" height="32" width="32" style="image-rendering:pixelated;" />
            </a>

            <ul class="navbar-nav flex-row">

                <li class="nav-item active">
                    <a class="nav-link" asp-controller="home" asp-action="index">Home <span class="sr-only">(current)</span></a>
                </li>
                @if (signInManager.IsSignedIn(User))
                {



                    <li class="nav-item  form-inline">
                        <form method="post" asp-controller="Account" asp-action="logout">
                            <button type="submit" class="nav-link active btn btn-link py-0" style="width:auto;">
                                Logout @User.Identity.Name
                            </button>
                        </form>
                    </li>

                    @*<li class="nav-item active">
                            <a class="nav-link" asp-controller="Account"
                               asp-action="ChangePassword">
                                Password
                            </a>
                        </li>*@

                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Home"
                           asp-action="UserResume" asp-route-id="@signInManager.UserManager.GetUserId(User)">
                            My Resume Page
                        </a>
                    </li>


                    <li class="nav-item dropdown">
                        <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Manage Account
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">

                            <a class="dropdown-item" asp-controller="Home"
                               asp-action="EditUserInfo">Edit User Info</a>

                            <a class="dropdown-item" asp-controller="Account"
                               asp-action="ChangePassword">Change Password</a>

                            <a class="dropdown-item" asp-controller="Account"
                               asp-action="DeleteAccountConfirmation">Delete Account</a>

                        </div>
                    </li>

                }
                else
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" herf="#">About(Not Created)</a>
                    </li>
                }

            </ul>


        </nav>

        <div id="renderBody" class="container-fluid">
            @*class="container-fluid"*@
            @RenderBody()
        </div>

        @*<div id="footer">
                This will be the footer area
            </div>*@


        @if (IsSectionDefined("Scripts"))
        {
            @RenderSection("Scripts", required: false)
        }

    @*</div>*@
</body>
</html>
