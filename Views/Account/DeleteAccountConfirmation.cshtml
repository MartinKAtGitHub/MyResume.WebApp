@inject SignInManager<ApplicationUser> signInManager;

<div>
    <h3 class="text-center text-danger">
        You are about to delete your account, all data you have provided will be permanently deleted.
    </h3>
    <h4 class="text-center text-danger">Are you absolutely sure you want to perform this action</h4>

   
</div>

<div>

    <form asp-controller="Account" asp-action="DeleteAccount" asp-route-id="@signInManager.UserManager.GetUserId(User)" method="post">
        <button type="submit" class="btn btn-danger">Delete Account</button>
    </form>
    <a asp-controller="Home" asp-action="Index" class="btn btn-info">Go back</a>
</div>