@inject SignInManager<ApplicationUser> signInManager;

    <div class="row mb-5">
        <div class="col-12 mb-5">
            <h3 class="text-center text-danger">
                You are about to delete your account, all data you have provided will be permanently deleted.
            </h3>
        </div>

        <div class="col-12 mb-5 text-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-info"><i class="fas fa-arrow-left"></i> Go back</a>
        </div>
        
    </div>

<div class="row">
    
    <div class="col-12 mb-3">
        <h4 class="text-center text-danger">Are you absolutely sure you want to perform this action?</h4>
    </div>
    <div class="col-12 text-center">
        <form asp-controller="Account" asp-action="DeleteAccount" asp-route-id="@signInManager.UserManager.GetUserId(User)" method="post">
            <button type="submit" class="btn btn-danger"><i class="fas fa-skull"></i> Delete Account</button>
        </form>
    </div>
</div>