@model AchievementViewModel
@inject SignInManager<ApplicationUser> signInManager;
@{

    ViewBag.Title = "Item information";
    // var avatarImgPath = "~/images/AvatarImages/" + (Model.AvatarImgPath ?? "../MyResumeDefaultAvatar.png");
}
<form enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="EditItem">
    <h4>Achievement</h4>
    <hr />

    <div class="row">
        @for (int i = 0; i < @Model.ImagePaths.Count; i++)
        {
        <div class="col">
            <img class="img-fluid" src="@Model.ImagePaths[i]" alt="Alternate Text"  asp-append-version="true"/>
        </div>
        }
    </div>



    <div class="row">
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            @*<label asp-for="ThumbnailImage"></label>
            <div class="custom-file mb-5">
                <input asp-for="ThumbnailImage" class="form-control custom-file-input" accept=".png">
                <label asp-for="ThumbnailImage" class="custom-file-label">Choose file</label>
            </div>*@



            <h6>Max file size is 5Kb</h6>

            @for (int i = 0; i < Model.GalleryImagesArray.Length; i++)
            {
                <div class="custom-file mb-2">
                    <input asp-for="@Model.GalleryImagesArray[i].GalleryImage" class="form-control custom-file-input" accept=".png">
                    <label asp-for="@Model.GalleryImagesArray[i].GalleryImage" class="custom-file-label">Choose file</label>
                    
                    @{ 
                        var msg = @ViewData["GalleryImage" + i];
                        if(string.IsNullOrEmpty(msg as string))
                        {
                             <h6>@msg</h6>
                        }

                    }
                </div>
            }



            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainText" class="control-label"></label>
                <input asp-for="MainText" class="form-control" />
                <span asp-validation-for="MainText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderPosition" class="control-label"></label>
                <input asp-for="OrderPosition" class="form-control" />
                <span asp-validation-for="OrderPosition" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EnableComments" /> @Html.DisplayNameFor(model => model.EnableComments)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EnableRating" /> @Html.DisplayNameFor(model => model.EnableRating)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="UserResume" asp-route-id="@signInManager.UserManager.GetUserId(User)">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });

        });
    </script>
}

