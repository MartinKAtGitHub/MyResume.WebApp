@model AchievementViewModel
@inject SignInManager<ApplicationUser> signInManager;
@{
    ViewData["Title"] = "Edit item";

}
<h4>ITEM</h4>
<h6>Max file size is 5Kb</h6>
<hr />

<div class="row">
    @for (int i = 0; i < @Model.ImageSrcPaths.Count; i++)
    {
        <div class="col">
            <img class="img-fluid" src="@Model.ImageSrcPaths[i]" alt="Alternate Text" asp-append-version="true" />

            <form method="post" asp-action="RemoveGalleryImg" asp-route-id="@this.ViewContext.RouteData.Values["id"] " asp-route-imageIndex="@i">
                <div>
                    <button type="submit" class="btn-warning">Remove Avatar</button>
                </div>
            </form>

        </div>
    }
</div>



<div class="row">
    <div class="col">

        <form enctype="multipart/form-data" method="post" asp-action="EditItem">

            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="custom-file mb-2">
                <input asp-for="@Model.Thumbnail" class="form-control custom-file-input" accept=".png">
                <label asp-for="@Model.Thumbnail" class="custom-file-label">Choose file</label>

            </div>
            <div class="custom-file mb-2">
                <input asp-for="@Model.GallaryImage_1" class="form-control custom-file-input" accept=".png">
                <label asp-for="@Model.GallaryImage_1" class="custom-file-label">Choose file</label>

            </div>
            <div class="custom-file mb-2">
                <input asp-for="@Model.GallaryImage_2" class="form-control custom-file-input" accept=".png">
                <label asp-for="@Model.GallaryImage_2" class="custom-file-label">Choose file</label>
            </div>
            <div class="custom-file mb-2">
                <input asp-for="@Model.GallaryImage_3" class="form-control custom-file-input" accept=".png">
                <label asp-for="@Model.GallaryImage_3" class="custom-file-label">Choose file</label>
            </div>
            <div class="custom-file mb-2">
                <input asp-for="@Model.GallaryImage_4" class="form-control custom-file-input" accept=".png">
                <label asp-for="@Model.GallaryImage_4" class="custom-file-label">Choose file</label>
            </div>
            <div class="custom-file mb-2">
                <input asp-for="@Model.GallaryImage_5" class="form-control custom-file-input" accept=".png">
                <label asp-for="@Model.GallaryImage_5" class="custom-file-label">Choose file</label>
            </div>


            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainText" class="control-label"></label>
                <input asp-for="MainText" class="form-control" />
                <span asp-validation-for="MainText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderPosition" class="control-label"></label>
                <input asp-for="OrderPosition" class="form-control" />
                <span asp-validation-for="OrderPosition" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EnableComments" /> @Html.DisplayNameFor(model => model.EnableComments)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EnableRating" /> @Html.DisplayNameFor(model => model.EnableRating)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserResume" asp-route-id="@signInManager.UserManager.GetUserId(User)">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });

        });
    </script>
}

