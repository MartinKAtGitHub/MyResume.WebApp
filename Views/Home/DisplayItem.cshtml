@model AchievementViewModel

@{
    ViewData["Title"] = "Display Item";
}

<div class="row mt-4 mb-1">
    <div class="col text-center">
        <h1 class="display-4">@Model.Title</h1>
    </div>
</div>

<!-- Carousel -->
@if (Model.ImageSrcPaths.Any())
{

    <div id="galleryCarousel" class=" row carousel slide mb-5" data-ride="carousel" data-interval="false">
        <!--  when auto slide is enabled the text gets blurry on transitions -->

        <ol class="carousel-indicators mt-5">

            @for (int i = 0; i < Model.ImageSrcPaths.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#galleryCarousel" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#galleryCarousel" data-slide-to="@i"></li>
                }
            }
        </ol>

        <div class="carousel-inner h-100 p-3">

            @for (int i = 0; i < Model.ImageSrcPaths.Count; i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item h-100 active">
                        <img class="displayitem-gallery-img" src="@Model.ImageSrcPaths[i]" alt="Gallery image @i">
                    </div>
                }
                else
                {
                    <div class="carousel-item h-100">
                        <img class="displayitem-gallery-img" src="@Model.ImageSrcPaths[i]" alt="Gallery image @i">
                    </div>
                }
            }
        </div>

        <a class="carousel-control-prev" href="#galleryCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#galleryCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}


<div class="row mb-3">
    <div id="itemSummery" class="col">@Model.Summary</div>
</div>

