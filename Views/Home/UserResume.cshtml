@model UserResumeViewModel
@{
    ViewBag.Title = "User Resume";

    var avatarImgPath = Model.UserInfo.AvatarImgPath ?? Model.DefaultAvatarImage;

}

<div class="row mb-5">
    <div class="col text-md-left text-sm-center align-self-center">
        <h3 class="display-3 text-break nameTitle">@Model.UserInfo.FirstName</h3>
        <h3 class="display-3 text-break nameTitle">@Model.UserInfo.MiddelName</h3>
        <h3 class="display-3 text-break nameTitle">@Model.UserInfo.LasttName</h3>

        @if (string.IsNullOrEmpty(Model.UserInfo.FirstName) && string.IsNullOrEmpty(Model.UserInfo.MiddelName) && string.IsNullOrEmpty(Model.UserInfo.LasttName))
        {
            <h4 class="display-2 text-break text-center nameTitle">@Model.UserInfo.ApplicationUser.UserName</h4>

        }
        else
        {
            <h4 class="display-4 text-muted text-break nameTitle">@Model.UserInfo.ApplicationUser.UserName</h4>
        }
    </div>
    <div class="col-4 text-right align-self-center">

        <img class="mb-3 img-fluid" src="@avatarImgPath" alt="Avatar_@Model.UserInfo.ApplicationUser.UserName" asp-append-version="true" />

        <h5 id="userResumeSummary">@Model.UserInfo.Summary</h5>

        @if (Model.EnableOwnerOptions)
        {
            <a asp-action="EditUserInfo" asp-controller="Home">Edit Personal Information</a>
        }
    </div>

</div>




<div class="row experience-main-area">

    <div class="w-100 ">
        <h3 class="display-3 border-bottom m-0">Experience</h3>

        @if (Model.EnableOwnerOptions)
        {
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newExperienceModal">
                Add new exp
            </button>
        }

    </div>
    <!-- Modal -->
    <div class="modal fade" id="newExperienceModal" tabindex="-1" role="dialog" aria-labelledby="newExperienceModalTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newExperienceModalTitle">
                        Modal title
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form id="newExpFrom" asp-action="CreateNewExperienceGroup" asp-route-id="@this.ViewContext.RouteData.Values["id"].ToString()" method="post">


                        @*<input type="hidden"  value="RouteData.Values["id"].ToString()" />*@


                        <label asp-for="@Model.NewExpGrp.Title">Grp Title</label>
                        <input asp-for="@Model.NewExpGrp.Title" type="text" value="" />
                        <span asp-validation-for="@Model.NewExpGrp.Title" class="text-danger"></span>

                        <label asp-for="@Model.NewExpGrp.ExperiencePoints[0].Title">Point 1 Title</label>
                        <input asp-for="@Model.NewExpGrp.ExperiencePoints[0].Title" type="text" value="" />
                        <span asp-validation-for="@Model.NewExpGrp.ExperiencePoints[0].Title" class="text-danger"></span>


                        <label asp-for="@Model.NewExpGrp.ExperiencePoints[0].Descriptions[0].Discription"></label>
                        <input asp-for="@Model.NewExpGrp.ExperiencePoints[0].Descriptions[0].Discription" type="text" value="" />
                        <span asp-validation-for="@Model.NewExpGrp.ExperiencePoints[0].Descriptions[0].Discription" class="text-danger"></span>

                        <label asp-for="@Model.NewExpGrp.ExperiencePoints[0].Descriptions[1].Discription"></label>
                        <input asp-for="@Model.NewExpGrp.ExperiencePoints[0].Descriptions[1].Discription" type="text" value="" />
                        <span asp-validation-for="@Model.NewExpGrp.ExperiencePoints[1].Descriptions[1].Discription" class="text-danger"></span>

                        <label asp-for="@Model.NewExpGrp.ExperiencePoints[1].Title"> point 2 title</label>
                        <input asp-for="@Model.NewExpGrp.ExperiencePoints[1].Title" type="text" value="" />
                        <span asp-validation-for="@Model.NewExpGrp.ExperiencePoints[1].Title" class="text-danger"></span>


                        <div asp-validation-summary="All" class="text-danger"></div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button onclick="CreateExp()" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </div>



