@model UserResumeViewModel
@{
    ViewBag.Title = "User Resume";

    var avatarImgPath = Model.UserInfo.AvatarImgPath ?? Model.DefaultAvatarImage;

}

<div class="row mb-5">

    <div class="col text-md-left text-sm-center align-self-center">
        <h3 class="display-3 text-break nameTitle">@Model.UserInfo.FirstName</h3>
        <h3 class="display-3 text-break nameTitle">@Model.UserInfo.MiddelName</h3>
        <h3 class="display-3 text-break nameTitle">@Model.UserInfo.LasttName</h3>

        @if (string.IsNullOrEmpty(Model.UserInfo.FirstName) && string.IsNullOrEmpty(Model.UserInfo.MiddelName) && string.IsNullOrEmpty(Model.UserInfo.LasttName))
        {
            <h4 class="display-2 text-break text-center nameTitle">@Model.UserInfo.ApplicationUser.UserName</h4>

        }
        else
        {
            <h4 class="display-4 text-muted text-break nameTitle">@Model.UserInfo.ApplicationUser.UserName</h4>
        }
    </div>
    <div class="col-4 text-right align-self-center">

        <img class="mb-3 img-fluid" src="@avatarImgPath" alt="Avatar_@Model.UserInfo.ApplicationUser.UserName" asp-append-version="true" />

        <h5 id="userResumeSummary">@Model.UserInfo.Summary</h5>

        @if (Model.EnableOwnerOptions)
        {
            <a asp-action="EditUserInfo" asp-controller="Home">Edit Personal Information</a>
        }
    </div>

</div>

@if (@Model.Achievements.ToList().Count > 0)
{
    <div id="itemContainer" class=" row border-top">

        @foreach (var achievement in @Model.Achievements)
        {
            <div class="col mb-3 d-flex justify-content-center">
                <a asp-action="DisplayItem" asp-route-id="@achievement.AchievementId">
                    <div class="item ">

                        @{
                            var thumbNail = achievement.ItemGalleryImageFilePaths[0].GalleryImageFilePath ?? Model.DefaultGalleryImage;
                        }
                        <img class="imgItemThumbnail" src="@thumbNail" alt="Item thumbnail" asp-append-version="true" />

                        @if (Model.EnableOwnerOptions)
                        {
                            <div class="itemEditBtn">

                                <a id="editBtn_@achievement.AchievementId" class="btn btn-info" asp-action="EditItem" asp-route-id="@achievement.AchievementId">
                                    Edit Item
                                </a>
                            </div>

                            <div class="itemDeleteBtn">
                                <form asp-action="DeleteItem" asp-route-id="@achievement.AchievementId" method="post">

                                    <span id="deleteSpan_@achievement.AchievementId">
                                        <span class="btn btn-danger"
                                              onclick="confirmDelete('@achievement.AchievementId', true)">Delete</span>
                                    </span>


                                    <span id="confirmDeleteSpan_@achievement.AchievementId" style="display:none">
                                        <span>Are you sure you want to delete?</span>
                                        <button type="submit" class="btn btn-danger">Yes</button>
                                        <span class="btn btn-primary"
                                              onclick="confirmDelete('@achievement.AchievementId', false)">No</span>
                                    </span>

                                </form>
                            </div>
                        }

                        <div class="itemSummeryFadeIn">
                            <h3>@achievement.Title</h3>
                        </div>


                        @*<img src="" alt="Alternate Text" />*@

                    </div>
                </a> @*>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> This is what is Causing the errors <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<<*@
            </div>
        }

    </div>

    <div>
        @if (Model.EnableOwnerOptions)
        {
            <a asp-action="CreateItem" asp-controller="Home">Add New Item</a>
        }
        <a href="#">Show more</a>
    </div>
}
else
{
    <h3>No items has been added to this resume</h3>
    @if (Model.EnableOwnerOptions)
    {
        <a asp-action="CreateItem" asp-controller="Home">Create New Item</a>
    }
}



<div class="row p-4">
    <div class="col">
        <h4>About Me</h4>
        <div id="mainTextContainer">
            <p id="mainTextBlock">@Model.UserInfo.MainText</p>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/SiteScripts.js"></script>
}


