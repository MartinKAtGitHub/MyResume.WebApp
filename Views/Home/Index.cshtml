@model UserSearchViewModel


<div id="homePageLogoContainer">


</div>

<div id="searchBar" class="indexContainer mx-auto">
    <form asp-controller="Home" asp-action="Index" method="get">
        <div class="input-group">

            <input class="form-control " type="search" placeholder="Search" asp-for="SearchString">

            <div class="input-group-append d-none d-md-flex">
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </div>
        </div>
    </form>
</div>


<div id="searchResultContainer" class="indexContainer mx-auto">

    <div class="row">

        @foreach (var User in Model.UsersResult)
        {
            var avatarImgPath = "~/images/AvatarImages/" + (User.AvatarImgPath ?? "../MyResumeIcon.png");
            
            <div class="col m-4">
                <div class=" card h-100 mx-auto text-center  bg-success">

                    <img id="avatarImg" class="card-img-top" src="@avatarImgPath" alt="Avatar_@User.ApplicationUser.UserName" asp-append-version="true" />

                    <div class="card-body">
                        <p class="card-text text-center mt-1 mb-1">
                            @User.FirstName @User.MiddelName @User.LasttName
                        </p>

                        <p class="card-text  m-0">
                            ( @User.ApplicationUser.UserName )
                        </p>
                    </div>

                    <div class="card-footer">
                        <div class="row">
                            <div class="col ">
                                <a asp-controller="Home" asp-action="UserResume" asp-route-id="@User.ApplicationUser.Id">Resume</a>
                            </div>
                            <div class="col text-center">
                                <a herf="#">Contact</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>



